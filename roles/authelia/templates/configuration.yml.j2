#       server_name: smtp.example.com
#       skip_verify: false
#       minimum_version: TLS1.2
#
# Read more at https://www.authelia.com/docs/configuration/notifier/smtp.html
#

telemetry:
  metrics:
    enabled: false
    address: "tcp://0.0.0.0:9959"
    buffers:
      read: 4096
      write: 4096
    timeouts:
      read: 6s
      write: 6s
      idle: 30s

